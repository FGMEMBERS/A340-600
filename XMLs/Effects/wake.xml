<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>wake</name>
    <type>trail</type>
    <texture>continous_smoke.png</texture>
    <emissive>false</emissive>
    <lighting>true</lighting>
    <pass>true</pass>

    <condition>
        <greater-than>
          <property>engines/engine[0]/n2</property>
          <value>50</value>
        </greater-than>
    </condition>

<!-- 
    <condition>
        <greater-than>
          <property>velocities/airspeed-kt</property>
          <value>50</value>
        </greater-than>
    </condition>
-->

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <speed-mps>
        <value>0</value>
        <spread>0</spread>
      </speed-mps>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>/velocities/airspeed-kt</property>
        <factor>1</factor>
        <offset>75</offset>
      </particles-per-sec>
    </counter>

    <align>fixed</align>

    <particle>
      <start>
        <color>
          <red><value>   1.0 </value></red>
          <green><value> 1.0 </value></green>
          <blue><value>  1.0 </value></blue>
          <alpha><value> 0.1 </value></alpha>
        </color>
        <size>
          <value>1.0</value>
        </size>
      </start>

      <end>
       <color>
         <red><value>   1.00 </value></red>
         <green><value> 1.00 </value></green>
         <blue><value>  1.00 </value></blue>
         <alpha><value> 0.02 </value></alpha>
       </color>
       <size>
         <value>1.2</value>
       </size>
      </end>

      <life-sec>
        <value>0.4</value>
      </life-sec>

      <mass-kg>0.01</mass-kg>
      <radius-m>0.1</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> true </gravity>
      <wind>    false </wind>
    </program>

  </particlesystem>

</PropertyList>
